<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Widget.AppCompat.Button.Borderless.Custom">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="NumberStyle" parent="Base.Widget.AppCompat.Button.Borderless.Custom">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="OperatorStyle" parent="Base.Widget.AppCompat.Button.Borderless.Custom">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="ScientificOperatorStyle" parent = "Base.Widget.AppCompat.Button.Borderless.Custom">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="ImageStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">0dp</item>
        <item name="tint">?attr/colorPrimary</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>